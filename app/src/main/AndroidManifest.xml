<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.on.conestogac.assignment1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".lengthActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_length"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".tempActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_temp"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_list"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".InputACar"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_input_acar"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DeleteAllActivity"
            android:configChanges="keyboardHidden|screenSize"
            android:label="@string/title_activity_delete_all"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>